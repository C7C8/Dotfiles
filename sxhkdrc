#
# SXHKD CONTROLS
#
# These controls manipulate most things on my system, designation
# lazarus3 (make of that symbolism whatever you want...). They are
# approximately ordered by criticality: core commands are first,
# WM controls, launchers, etc.
#
#


# Launch a terminal. End-all fix-all for the worst
# things that could possibly happen.
XF86Launch3
	terminator


# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit bspwm normally
super + alt + Escape
	bspc quit

# close and kill windows
super + {_,shift + }q
	bspc node -c

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
super + g
	bspc node -s biggest


#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{Left, Down, Up, Right}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {a,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node
super + {_,shift + }c
	bspc node -f {next,prev}

# focus the next/previous desktop
super + bracket{left,right}
	bspc desktop -f {prev,next}

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {Left, Down, Up, Right}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {Left, Down, Up, Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {Left, Down, Up, Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + ctrl + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}


#
# CUSTOM APPLICATION LAUNCHERS AND HOTKEYS
#

super + Return				# Launch a terminal. Retained due to legacy.
	terminator
super + d
	synapse				# Launch application launcher, synapse. (TODO: Switch!)
super + ctrl + f
	pcmanfm -n			# Launch file manager. -n creates new window
super + ctrl + v
	gvim				# Launch text editor
super + ctrl + m
	pcmanfm -n ~/Music & vlc	# Prep music environment - open folder to ~/Music and run VLC.
super + ctrl + p
	pavucontrol			# Launch Pulse Audio Control.
super + ctrl + w
	gnome-control-center network	# Launch network manager (TODO: Switch!)
super + ctrl + r 
	gnome-sound-recorder		# Launch sound recorder, in case nasty things pop u.
F1
	light -U 10			# Increase backlight by 10%. Fn key not needed.
F2
	light -A 10			# Decrease backlight by 10%. Fn key not needed.
{F11, XF86AudioPrev}
	amixer -D pulse sset Master 5%-	# Decrease volume by 5%
{F12, XF86AudioNext}
	amixer -D pulse sset Master 5%+	# Increase volume by 5%
{F10, XF86AudioStop}
	amixer -D pulse sset Master 0%	# Mute audio
super + l
	setxkbmap us && i3lock -i ~/Dotfiles/media/lock.png	# Lock screen and revert to QWERTY standard keyboard.
~button1
	bspc pointer -g focus		# Focus window that was clicked on.
XF86Launch4
	setxkbmap us			# Set keyboard to QWERTY standard keyboard.
super + XF86Launch4
	setxkbmap us -variant colemak	# Set keyboard to Colemak keyboard.


#
# UX MODES
#

super + ctrl + s
	~/Dotfiles/modes/switch_standby.sh	# Switch to standby (normal) mode.
super + ctrl + b
	~/Dotfiles/modes/switch_battle.sh	# Switch to battle mode.


#
# MISC. SOUNDBOARD STUFF 
# (for no particular reason)
#

super + shift + ctrl + s
	play -v 35 ~/Dotfiles/soundboard/cymcrash.ogg


